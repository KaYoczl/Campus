<!--pages/login/login.wxml-->
<view class="login-container">
  <view class="title">微信小程序App</view>
  <view class="login-box">
    <label>用户名</label>
    <input bindinput="nameIn" placeholder="请输入用户名"/>
    <label>密码</label>
    <input bindinput="passwordIn" placeholder="请输入密码"/>
    <button class="login-btn" bindtap="login">立即登录</button>
    <view class="three-line">一一一一一第三方登录一一一一一</view>
    <button bindtap="toRegister" class="login-btn" style="background-color:green;">点击注册</button>
  </view>
</view>