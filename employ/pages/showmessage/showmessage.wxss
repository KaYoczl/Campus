/* pages/showmessage/showmessage.wxss */
.bg{
  width: 100%;
  height: 30rpx;
  background-color: #edecf2;
}
.horizon{
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 100rpx;
  align-items: center;
}
.left{
  margin-left: 30rpx;
}
.input{
  margin-right: 30rpx;
  font-size: 32rpx;
  color: gray;
}
/* mine */
.flex{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.text{
  width: 695rpx;
  height: 300rpx;
  margin: auto;
  border-radius: 10rpx;
  box-sizing: border-box;
  padding-left: 5rpx;
}
.distance{
  margin: 18rpx 0 18rpx 30rpx;
}
.tip{
  display: block;
  position: absolute;
  top: 40%;
  left: 50%;
  transform: translate(-50%,-50%);
  margin-top: 50rpx;
  font-size: 50rpx;
}
.bottom{
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  justify-content: center;
}
.small{
  margin-top: -25rpx;
}
.container{
  margin: 30rpx;
  display: flex;
  justify-content: space-around;
}
/* 确定按钮 */
.sureBtn{
  width: 160rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  background-color: green;
  color: #fff;
  font-size: 30rpx;
}
.no{
  background-color: red;
  color: #fff;
}