/* pages/index/index.wxss */
.avatar{
  position: fixed;
  top: 30rpx;
  left: 30rpx;
}
.main-img{
  width: 100%;
  height: 460rpx;
}
.main-text{
  margin: 10rpx;
  margin-left: 12rpx;
  font-family: 'Microsoft YaHei';
  font-weight: 1000;
  font-size: 24px;
}
.body{
  position: relative;
  margin: 10rpx;
  margin-top: 20rpx;
  border: 1rpx solid 	#F5F5F5;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.body .flex{
  position: relative;
  width: 33.3%;
  overflow: hidden;
  text-align: center;
  box-sizing: border-box;
  border: 1rpx solid 	#F5F5F5;
  padding-bottom: 35rpx;
  padding-top: 25rpx;
}
.body .flex image{
  width: 80rpx;
  height: 80rpx;
  margin: auto;
  display: block;
  padding-bottom: 20rpx;
}